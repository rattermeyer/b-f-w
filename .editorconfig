# EditorConfig: http://editorconfig.org/

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# ident style tab, because it is more inclusive
# (see https://dev.to/alexandersandberg/why-we-should-default-to-tabs-instead-of-spaces-for-an-accessible-first-environment-101f)
indent_style = tab

[*.gradle]
indent_size = 2
tab_width = 2

[*.groovy]
indent_size = 4
tab_width = 4

[*.java]
indent_size = 4
tab_width = 4

[*.json]
indent_size = 2
tab_width = 2

[*.py]
# for python spaces are the preferred way
indent_size = 2
indent_style = spaces

[*.sh]
indent_size = 2
tab_width = 2

[*.{yml,yaml}]
indent_size = 2
# yaml cannot use tabs
indent_style = spaces

[*.{xsd,xml}]
indent_size = 4
tab_width = 4
